@model List<CSHBlog.Web.Models.Domain.Tag>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All Tags</h1>
    </div>
</div>

<div class="container  py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>DisplayName</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {

                    <tr>
                        <td>@t.Id</td>
                        <td>@t.Name</td>
                        <td>@t.DisplayName</td>
                        <td>
                            <a asp-area="" asp-controller="AdminTags" asp-action="Edit" asp-route-id="@t.Id">Edit</a>
                        </td>
                        <td>
                            <form asp-controller="AdminTags" asp-action="ListDelete" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="@t.Id" />
                                <button type="submit" class="btn btn-link link-danger" style="padding: 0;">X</button>
                            </form>                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Tags to dispaly.</p>
    }
</div>


