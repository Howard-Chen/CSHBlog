@model List<CSHBlog.Web.Models.Domain.BlogPost >
@{
}



<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All BlogPosts</h1>
    </div>
</div>

<div class="container  py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Heading</th>
                    <th>Tags</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {

                    <tr>
                        <td>@p.Id</td>
                        <td>@p.Heading</td>        
                        <td>
                            <div class="d-flex">
                                @foreach (var tag in p.Tags)
                                {
                                    <span class="badge bg-secondary">@tag.Name</span>
                                }
                            </div>


                        </td>
                        <td>
                            <a asp-area="" asp-controller="AdminBlogPosts" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                        </td>
                        <td>
                            <form asp-controller="AdminBlogPosts" asp-action="ListDelete" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="@p.Id" />
                                <button type="submit" class="btn btn-link link-danger" style="padding: 0;">X</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Tags to dispaly.</p>
    }
</div>